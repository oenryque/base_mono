# Configurações da API Flask
# Copie este arquivo para .env e configure as variáveis

# Ambiente
FLASK_ENV=development
FLASK_DEBUG=true

# Banco de dados
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/monorepo_template
SQLALCHEMY_DATABASE_URI=postgresql://postgres:postgres@localhost:5432/monorepo_template
SQLALCHEMY_TRACK_MODIFICATIONS=false

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# CORS
FRONTEND_URL=http://localhost:5173

# Email (opcional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Celery (opcional)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Logs
LOG_LEVEL=INFO
LOG_FILE=logs/api.log

# Segurança
BCRYPT_ROUNDS=12
SECRET_KEY=your-super-secret-key-change-in-production
